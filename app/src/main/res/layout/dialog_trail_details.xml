<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/labelTrailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/labelTrailName" />

        <TextView
            android:id="@+id/labelTrailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/labelTrailDescription" />

        <TextView
            android:id="@+id/labelTrailLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/labelTrailLength" />

        <TextView
            android:id="@+id/labelTrailSymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/labelTrailSymbol" />


        <!-- distances -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/labelTrailDistancesHeading"
            android:theme="@style/HeadingTextView" />

        <TextView
            android:id="@+id/labelDistanceToTrailStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/labelDistanceToTrailStart" />

        <TextView
            android:id="@+id/labelDistanceToTrailDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/labelDistanceToTrailDestination" />

        <TextView
            android:id="@+id/labelDistanceToTrailClosest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/labelDistanceToTrailClosest" />

    </LinearLayout>
</ScrollView>
