<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonGPSAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/buttonGPSAddress" />

            <Button
                android:id="@+id/buttonGPSSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/buttonGPSSave" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:textStyle="bold"
                android:textColor="@color/heading"
                android:text="@string/labelGPSSignal" />

            <TextView
                android:id="@+id/labelGPSProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelGPSProvider" />

            <TextView
                android:id="@+id/labelGPSAccuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelGPSAccuracy" />

            <TextView
                android:id="@+id/labelGPSTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelGPSTime" />

            <Button
                android:id="@+id/buttonGPSDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttonGPSDetails" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <Switch
                android:id="@+id/buttonEnableSimulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttonEnableLocationSimulation" />

            <Button
                android:id="@+id/buttonSimulatedLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelNoSimulatedPointSelected" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
