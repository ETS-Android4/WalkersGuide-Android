<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/buttonRefresh" />

        <Switch
            android:id="@+id/buttonShowAllPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/buttonShowAllPoints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutBottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/labelFragmentHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:focusable="true"
                android:textStyle="bold"
                android:textColor="@color/heading" />

            <ImageButton
                android:id="@+id/buttonJumpToTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/minWidth"
                android:minHeight="@dimen/minHeight"
                android:padding="2dp"
                android:background="@null"
                android:src="@drawable/arrow_up"
                android:contentDescription="@string/buttonJumpToTop" />
        </LinearLayout>

        <ListView
            android:id="@+id/listViewNextIntersections"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/divider"
            android:dividerHeight="@dimen/listDividerHeight" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" >

            <TextView
                android:id="@+id/labelListViewEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true" />
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
