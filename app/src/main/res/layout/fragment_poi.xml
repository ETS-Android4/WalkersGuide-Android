<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/buttonPreviousProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@null"
            android:src="@drawable/arrow_left"
            android:contentDescription="@string/buttonPreviousProfile" />

        <Button
            android:id="@+id/buttonSelectProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/emptyProfileList" />

        <ImageButton
            android:id="@+id/buttonNextProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@null"
            android:src="@drawable/arrow_right"
            android:contentDescription="@string/buttonNextProfile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/buttonRefresh" />

        <Switch
            android:id="@+id/buttonFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/buttonFilter" />

        <Button
            android:id="@+id/buttonMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/buttonMore" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/layoutTop"
        android:layout_above="@id/layoutBottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layoutTop"
            android:layout_above="@id/layoutBottom" >

            <TextView
                android:id="@+id/labelPOIFragmentHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:focusable="true"
                android:textStyle="bold"
                android:textColor="@color/heading" />

            <ImageButton
                android:id="@+id/buttonJumpToTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@null"
                android:src="@drawable/arrow_up"
                android:contentDescription="@string/buttonJumpToTop" />
        </LinearLayout>

        <ListView
            android:id="@+id/listViewPOI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/divider"
            android:dividerHeight="@dimen/listDividerHeight" />

        <TextView
            android:id="@+id/labelListViewPOIEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true" />
    </LinearLayout>

</RelativeLayout>
