<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/heading"
                android:focusable="true"
                android:text="@string/labelPointNameToSave"
                android:accessibilityHeading="true"
                tools:ignore="UnusedAttribute" />

            <include
                layout="@layout/layout_single_autocomplete_text_view" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:textStyle="bold"
                android:textColor="@color/heading"
                android:text="@string/locationSourceGPS"
                android:accessibilityHeading="true"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/labelGPSProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelGPSProvider" />

            <TextView
                android:id="@+id/labelGPSAccuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelGPSAccuracy" />

            <TextView
                android:id="@+id/labelGPSTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelGPSTime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/heading"
                android:focusable="true"
                android:text="@string/labelCheckFavoritesProfiles"
                android:accessibilityHeading="true"
                tools:ignore="UnusedAttribute" />

            <org.walkersguide.android.ui.view.CheckBoxGroupView
                android:id="@+id/checkBoxGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1" />

            <TextView
                android:id="@+id/labelNoPOIProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/errorNoPOIProfileCreated" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
