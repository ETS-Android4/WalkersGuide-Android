<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonStartPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonStartPoint" />

        <Button
            android:id="@+id/buttonDestinationPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="@string/buttonDestinationPoint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonNewRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/buttonNewRoute" />

            <Button
                android:id="@+id/buttonSwapRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/buttonSwapRoute" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
