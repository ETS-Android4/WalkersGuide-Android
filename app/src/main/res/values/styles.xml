<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- default font size and color -->
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/text</item>
        <!-- link color -->
        <item name="android:textColorLink">@color/link</item>
        <!-- style to prevent all-caps on buttons -->
        <item name="buttonStyle">@style/NoAllCapsButton</item>
    </style>

    <style name="NoAllCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>

</resources>
