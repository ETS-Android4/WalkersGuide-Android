<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textStyle="bold"
                    android:textColor="@color/heading"
                    android:focusable="true"
                    android:text="@string/labelLocationData" />

                <ImageButton
                    android:id="@+id/buttonRefreshLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/refresh"
                    android:contentDescription="@string/buttonRefreshLocation" />
            </LinearLayout>

            <TextView
                android:id="@+id/labelGPSProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelGPSProvider" />

            <TextView
                android:id="@+id/labelGPSAccuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelGPSAccuracy" />

            <TextView
                android:id="@+id/labelGPSTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelGPSTime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textStyle="bold"
                    android:textColor="@color/heading"
                    android:focusable="true"
                    android:text="@string/labelCheckFavoritesProfiles" />

                <ImageButton
                    android:id="@+id/buttonClearFavoritesProfiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/refresh"
                    android:contentDescription="@string/buttonClearFavoritesProfiles" />
            </LinearLayout>

            <org.walkersguide.android.ui.view.CheckBoxGroupView
                android:id="@+id/checkBoxGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1" />

            <TextView
                android:id="@+id/labelNoUserCreatedFavoritesProfiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/labelNoUserCreatedFavoritesProfiles" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/heading"
                android:focusable="true"
                android:text="@string/labelPointNameToSave" />

            <include
                layout="@layout/layout_single_edit_text" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
